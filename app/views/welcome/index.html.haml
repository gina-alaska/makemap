=content_for :header_nav do
  %li.dropdown
    =link_to "Saved Maps", "#", class: 'dropdown-toggle', 'data-toggle' => 'dropdown'
    %ul.dropdown-menu
      %li
        =link_to "All Maps", maps_url
      %li
        =#link_to "Map", map_url(Map.last)
            
.container-fluid.without-padding
  #map-controls
    .btn-toolbar
      .btn-group
        #panTool.btn.btn-primary{'data-toggle' => 'button'}
          Pan
        #aoiTool.btn.btn-primary{'data-toggle' => 'button'}
          Select AOI
        #clearTool.btn.btn-primary{'data-toggle' => 'button'}
          Clear
      .btn-group
        =#link_to "Layer", "#", {'data-toggle' => 'dropdown', class: 'btn btn-inverse btn-dropdown'}
        =#render 'layers'
        #options.btn.btn-inverse
          Options
      .btn-group
        #makeMapBtn.btn.btn-warning.disabled
          Make Map
  .row-fluid
    #map-container.span12
      
#infoBox.modal.hide
  .modal-header
    Please Wait....
  .modal-body
    .progress.active
      .bar{:style => "width: '40%'"}

#map-form.modal.hide
  .modal-header
    Configure your map
  .modal-body
    =render 'maps/form'
  .modal-footer
    .modal-close.btn.pull-right
      Accept

#show-map.modal.hide
  .modal-header
    About your map
  .modal-body.map-request-window
  .modal-footer
    .modal-close.btn.pull-right
      Close