=content_for :header_nav do
  %li.dropdown
    =link_to "Saved Maps", "#", class: 'dropdown-toggle', 'data-toggle' => 'dropdown'
    %ul.dropdown-menu
      %li
        =link_to "All Maps", maps_url
      %li
        =link_to "My Maps", maps_url(:mine => true)

#map-controls
  .btn-toolbar
    .btn-group{'data-toggle' => 'buttons-radio'}
      #panTool.btn.btn-primary.active{'data-toggle' => 'button'}
        Pan
      #aoiTool.btn.btn-primary{'data-toggle' => 'button'}
        Select AOI
    .btn-group
      #clearTool.btn.btn-primary
        Clear
    .btn-group
      #options.btn.btn-inverse
        Options
    .btn-group
      .makeMapBtn.btn.btn-warning.disabled
        Make Map
#map-container
      
#infoBox.modal.hide
  .modal-header
    Please Wait....
  .modal-body
  .modal-footer
    .modal-close.btn.disabled{'data-loading-text' => "Generating your map, Please wait..."}
      Dismiss

#map-form.modal.hide
  .modal-header
    Configure your map
  .modal-body
    =render 'maps/form'
  .modal-footer
    .btn-toolbar.pull-right
      .makeMapBtn.btn.btn-warning.disabled{'data-dismiss' => 'modal'}
        Make Map
      .modal-close.btn
        Accept

#show-map.modal.hide
  .modal-header
    About your map
  .modal-body.map-request-window
  .modal-footer
    .modal-close.btn.pull-right
      Close